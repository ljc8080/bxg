    margin-bottom: 20rpx;
}
.goods .title{
    width: 750rpx;
    display: flex;
    justify-content:space-between;
    font-size: 16px;
    padding-top: 20rpx;
}
.title{
    padding-bottom: 20rpx;
}
.title h3,.title a{
    position: relative;
    left: 40rpx;
} 
.title a{
    left:-40rpx;
}
.goods{
    margin-top: 5rpx;
    padding:0 20rpx;
}
.goods .info{
    display: flex;
    width: 750rpx;
    justify-content:space-around;
    margin-bottom: 20rpx;
}
.goods .info image{
    width: 375rpx;
    height: 230rpx;
}
.info>div{
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    width: 250rpx;
}
.info>div div{
    display: flex;
    justify-content: space-between
}
